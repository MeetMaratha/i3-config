configuration {
	font: "Roboto Medium 10";
        show-icons: true;
	icon-theme: "Kora Light Panel";
	display-drun: "ï€‚";
	drun-display-format: "{name}";
	disable-history: false;
	fullscreen: false;
	hide-scrollbar: true;
	sidebar-mode: false;
}

@import "colors.rasi"

window {
	transparency: "real";
	background-color: @bg;
	text-color: @fg;
	border: 5px;
	border-color: #1F1F1F;
	border-radius: 10px;
	width: 350px;
	location: center;
	x-offset: 0;
	y-offset: 0;
}

/* The logo beside search bar  */
prompt {
	enabled: true;
	padding: 10px 10px 10px 10px;
	background-color: @bg1;
	text-color: #FFFFFF;
	font: "Roboto Medium 10";
}

/* The Search bar */

entry {
	background-color: @bg2;
	text-color: #FFFFFF;
	placeholder-color: #FFFFFF;
	expand: true;
	horizontal-align: 0;
	placeholder: "Search...";
	padding: 10px;
	border-radius: 0px 10px 10px 0px;
	blink: true;
}

inputbar {
	children: [ prompt, entry ];
	background-color: @bg2;
	text-color: #FFFFFF;
	expand: false;
	border:	0px;
	border-radius: 10px;
	border-color: @ac;
	spacing: 0px;
}

/* The Box containing the list  */

listview {
	background-color: @bg;
	padding: 10px 0px 10px 0px;
	columns: 1;
	lines: 10;
	spacing: 5px;
	cycle: true;
	dynamic: true;
	layout: vertical;
}

mainbox {
	background-color: @bg;
	border: 0px;
	border-radius: 0px;
	border-color: @bg;
	children: [ inputbar, listview ];
	spacing: 0px;
	padding: 0px;
}

/* The box containing unfocused items*/

element {
	background-color: transparent;
	text-color: @fg;
	orientation: horizontal;
	border-radius: 0px;
	padding: 6px;
}

/* The Logo in the list */
element-icon {
	size: 24px;
	border: 0px;
	background-color: transparent;
}

/* The text in the list */

element-text {
	expand: true;
	horizontal-align: 0;
	vertical-align: 0.5;
	margin: 0px 5px 0px 5px;
	padding: 0px 5px 0px 5px;
	background-color: transparent;
	text-color: @fg;
}

element selected {
	background-color: #FB8C00B3;
	text-color: @fg;
	border:	0px 0px 0px 0px;
	border-radius: 10px;
	border-color: @bg3;
}
